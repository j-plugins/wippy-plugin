<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <!-- indexer for config files -->
        <fileBasedIndex implementation="com.github.xepozz.wippy.index.WippyConfigIndex"/>

        <!-- file:// reference resolution in Wippy config files -->
        <psi.referenceContributor
                language="yaml"
                implementation="com.github.xepozz.wippy.reference.WippyFileReferenceContributor"/>

        <!-- Gutter icon: source → Lua file -->
        <codeInsight.lineMarkerProvider
                language="yaml"
                implementationClass="com.github.xepozz.wippy.reference.WippySourceLineMarkerProvider"/>

        <!-- Annotator: highlights unresolved file:// references as errors -->
        <annotator
                language="yaml"
                implementationClass="com.github.xepozz.wippy.reference.WippyFileReferenceAnnotator"/>

        <!-- method: → Lua function reference resolution -->
        <psi.referenceContributor
                language="yaml"
                implementation="com.github.xepozz.wippy.reference.WippyMethodReferenceContributor"/>

        <!-- Gutter icon: method → Lua function -->
        <codeInsight.lineMarkerProvider
                language="yaml"
                implementationClass="com.github.xepozz.wippy.reference.WippyMethodLineMarkerProvider"/>
    </extensions>
</idea-plugin>
