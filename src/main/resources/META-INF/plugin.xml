<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.wippy</id>
    <name>Wippy</name>
    <vendor>xepozz</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="language-json.xml">com.intellij.modules.json</depends>
    <depends optional="true" config-file="language-yaml.xml">org.jetbrains.plugins.yaml</depends>
    <depends config-file="language-lua.xml">com.cppcxy.Intellij-EmmyLua</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.xepozz.wippy.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.github.xepozz.wippy.startup.MyProjectActivity" />
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Wippy File"
                implementationClass="com.github.xepozz.wippy.WippyFileType"
                fieldName="INSTANCE"
                language="yaml"
                patterns="*.wippy.yaml"
                fileNamesCaseInsensitive=".wippy.yaml"
        />

        <spellchecker.bundledDictionaryProvider
                implementation="com.github.xepozz.wippy.SpellcheckingDictionaryProvider"/>

        <postStartupActivity
                implementation="com.github.xepozz.wippy.project.WippySourceRootConfigurator"/>

        <vfs.asyncListener
                implementation="com.github.xepozz.wippy.project.WippyLockFileListener"/>
        <notificationGroup id="Wippy" displayType="BALLOON"/>

    </extensions>

    <actions>
        <group id="Wippy.ToolsMenu" text="Wippy" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action
                    id="Wippy.Rescan"
                    class="com.github.xepozz.wippy.project.WippyRescanAction"
                    text="Rescan Projects"
                    description="Detect Wippy projects and configure source roots"/>
        </group>
    </actions>
</idea-plugin>
